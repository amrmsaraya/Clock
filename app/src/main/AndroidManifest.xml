<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.amrmsaraya.clock">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".di.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Clock">

        <receiver
            android:name=".services.CancelStopwatchActionReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".services.CancelTimerActionReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".services.StopwatchService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".services.TimerService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".presentation.main_activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Clock.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>