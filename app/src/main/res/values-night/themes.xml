<resources>
    <!-- Base application theme. -->
    <style name="Theme.Clock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/darkSurface</item>
        <item name="android:navigationBarColor">@color/darkSurface</item>
    </style>

    <style name="Theme.Clock.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/darkSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Clock</item>
    </style>

</resources>