<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/lightSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor" >@color/lightSurface</item>
    </style>

    <style name="Theme.Clock.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="windowSplashScreenBackground">@color/lightSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Clock</item>
    </style>
</resources>